<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--지연 : 전체 배경 이미지뷰-->
    <ImageView
        android:id="@+id/main_bg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/main_bg_with_yellow"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <!--지연 : 새 게임 버튼-->
    <Button
        android:id="@+id/main_btn1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"

        android:layout_marginStart="131dp"
        android:layout_marginLeft="131dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/main_btn1"
        android:textColor="#181907"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/main_btn2" />

    <!--지연 : 불러오기 버튼-->
    <Button
        android:id="@+id/main_btn2"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_gravity="center_vertical"

        android:layout_marginEnd="176dp"
        android:layout_marginRight="176dp"
        android:background="@drawable/main_btn2"
        android:textColor="#181907"
        app:layout_constraintBottom_toBottomOf="@+id/main_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_btn1" />

</androidx.constraintlayout.widget.ConstraintLayout>